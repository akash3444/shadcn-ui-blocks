{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "login-05",
  "type": "registry:block",
  "title": "Login 05",
  "description": "A simple login block",
  "dependencies": [
    "@hookform/resolvers",
    "lucide-react",
    "react-hook-form",
    "zod"
  ],
  "registryDependencies": [
    "button",
    "form",
    "input",
    "separator"
  ],
  "files": [
    {
      "path": "src/registry/blocks/login-05/components/login.tsx",
      "content": "\"use client\";\n\nimport { zodResolver } from \"@hookform/resolvers/zod\";\nimport {\n  FigmaIcon,\n  GithubIcon,\n  InstagramIcon,\n  TwitchIcon,\n  TwitterIcon,\n} from \"lucide-react\";\nimport Link from \"next/link\";\nimport { useForm } from \"react-hook-form\";\nimport { z } from \"zod\";\nimport { Button } from \"@/components/ui/button\";\nimport {\n  Form,\n  FormControl,\n  FormField,\n  FormItem,\n  FormLabel,\n  FormMessage,\n} from \"@/components/ui/form\";\nimport { Input } from \"@/components/ui/input\";\nimport { Separator } from \"@/components/ui/separator\";\nimport { Logo } from \"@/registry/blocks/login-05/components/logo\";\n\nconst formSchema = z.object({\n  email: z.string().email(),\n  password: z.string().min(8, \"Password must be at least 8 characters long\"),\n});\n\nconst Login = () => {\n  const form = useForm<z.infer<typeof formSchema>>({\n    defaultValues: {\n      email: \"\",\n      password: \"\",\n    },\n    resolver: zodResolver(formSchema),\n  });\n\n  const onSubmit = (data: z.infer<typeof formSchema>) => {\n    console.log(data);\n  };\n\n  return (\n    <div className=\"flex h-screen items-center justify-center\">\n      <div className=\"grid h-full w-full p-4 lg:grid-cols-2\">\n        <div className=\"m-auto flex w-full max-w-xs flex-col items-center\">\n          <Logo className=\"h-9 w-9\" />\n          <p className=\"mt-4 font-semibold text-xl tracking-tight\">\n            Log in to Shadcn UI Blocks\n          </p>\n\n          <div className=\"mt-8 flex items-center gap-3\">\n            <Button\n              className=\"h-10 w-10 rounded-full\"\n              size=\"icon\"\n              variant=\"outline\"\n            >\n              <GithubIcon className=\"h-[18px]! w-[18px]!\" />\n            </Button>\n            <Button\n              className=\"h-10 w-10 rounded-full\"\n              size=\"icon\"\n              variant=\"outline\"\n            >\n              <InstagramIcon className=\"h-[18px]! w-[18px]!\" />\n            </Button>\n            <Button\n              className=\"h-10 w-10 rounded-full\"\n              size=\"icon\"\n              variant=\"outline\"\n            >\n              <TwitterIcon className=\"h-[18px]! w-[18px]!\" />\n            </Button>\n            <Button\n              className=\"h-10 w-10 rounded-full\"\n              size=\"icon\"\n              variant=\"outline\"\n            >\n              <FigmaIcon className=\"h-[18px]! w-[18px]!\" />\n            </Button>\n            <Button\n              className=\"h-10 w-10 rounded-full\"\n              size=\"icon\"\n              variant=\"outline\"\n            >\n              <TwitchIcon className=\"h-[18px]! w-[18px]!\" />\n            </Button>\n          </div>\n\n          <div className=\"my-7 flex w-full items-center justify-center overflow-hidden\">\n            <Separator />\n            <span className=\"px-2 text-sm\">OR</span>\n            <Separator />\n          </div>\n\n          <Form {...form}>\n            <form\n              className=\"w-full space-y-4\"\n              onSubmit={form.handleSubmit(onSubmit)}\n            >\n              <FormField\n                control={form.control}\n                name=\"email\"\n                render={({ field }) => (\n                  <FormItem>\n                    <FormLabel>Email</FormLabel>\n                    <FormControl>\n                      <Input\n                        className=\"w-full\"\n                        placeholder=\"Email\"\n                        type=\"email\"\n                        {...field}\n                      />\n                    </FormControl>\n                    <FormMessage />\n                  </FormItem>\n                )}\n              />\n              <FormField\n                control={form.control}\n                name=\"password\"\n                render={({ field }) => (\n                  <FormItem>\n                    <FormLabel>Password</FormLabel>\n                    <FormControl>\n                      <Input\n                        className=\"w-full\"\n                        placeholder=\"Password\"\n                        type=\"password\"\n                        {...field}\n                      />\n                    </FormControl>\n                    <FormMessage />\n                  </FormItem>\n                )}\n              />\n              <Button className=\"mt-4 w-full\" type=\"submit\">\n                Continue with Email\n              </Button>\n            </form>\n          </Form>\n\n          <div className=\"mt-5 space-y-5\">\n            <Link\n              className=\"block text-center text-muted-foreground text-sm underline\"\n              href=\"#\"\n            >\n              Forgot your password?\n            </Link>\n            <p className=\"text-center text-sm\">\n              Don&apos;t have an account?\n              <Link className=\"ml-1 text-muted-foreground underline\" href=\"#\">\n                Create account\n              </Link>\n            </p>\n          </div>\n        </div>\n        <div className=\"hidden rounded-lg border bg-muted lg:block\" />\n      </div>\n    </div>\n  );\n};\n\nexport default Login;\n",
      "type": "registry:component"
    },
    {
      "path": "src/registry/blocks/login-05/components/logo.tsx",
      "content": "import { cn } from \"@/lib/utils\";\n\nexport const Logo = ({ className, ...props }: React.ComponentProps<\"img\">) => {\n  return (\n    <img\n      alt=\"logo\"\n      className={cn(\"size-7\", className)}\n      src=\"/images/android-chrome-192x192.png\"\n      {...props}\n    />\n  );\n};\n",
      "type": "registry:component"
    }
  ]
}