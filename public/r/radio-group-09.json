{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "radio-group-09",
  "type": "registry:component",
  "title": "Radio Group with Cards (Style 3)",
  "description": "A radio group component with card-style options (style 3)",
  "registryDependencies": [
    "radio-group",
